    <Style x:Key="TextMuted" TargetType="Label">
        <Setter Property="Foreground" Value="#6c757d"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextPrimary" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#007bff"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextSuccess" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#28a745"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextSecondary" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#6c757d"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextDanger" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#dc3545"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextWarning" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#ffc107"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextInfo" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#17a2b8"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <Style x:Key="TextBold" TargetType="Label">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="FormControl" TargetType="TextBox">
        <Setter Property="Foreground" Value="#999"/>
        <Setter Property="Padding" Value="8 4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>

        <Style.Triggers>
            <!-- Trigger para el foco -->
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Foreground" Value="Black"/>
                <!-- Color negro -->
                <Setter Property="BorderBrush" Value="#007bff"/>
                <!-- Color de borde al estar seleccionado -->
                <Setter Property="BorderThickness" Value="2"/>
                <!-- Grosor del borde al estar seleccionado -->
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="#999"/>
        <Setter Property="Padding" Value="8 4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="BorderBrush" Value="#007bff"/>
                <Setter Property="BorderThickness" Value="2"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>