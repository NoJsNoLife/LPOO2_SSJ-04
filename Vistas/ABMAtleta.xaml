<Window x:Class="Vistas.ABMAtleta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vistas"
        mc:Ignorable="d"
        Title="ABMAtleta" Height="450" Width="800" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Button Style="{StaticResource PrimaryButton}" x:Name="btnAgregarAtleta" Content="Agregar Atleta" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="146" Click="btnAgregarAtleta_Click"/>
        <Button x:Name="btnAtras" Content="Atrás" HorizontalAlignment="Left" Margin="600,7,0,0" VerticalAlignment="Top" Height="33" Width="146" Background="IndianRed" RenderTransformOrigin="0.928,0.758" Click="btnAtras_Click"/>
    </Grid>
</Window>
